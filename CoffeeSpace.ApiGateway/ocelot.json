        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 3,
        "DurationOfBreak": 1000,
        "TimeoutValue": 3500
      }
    },
    {
      "UpstreamPathTemplate": "/buyers/{id:guid}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ,"PUT" ],

