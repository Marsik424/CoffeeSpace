<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="CoffeeSpace.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CoffeeSpace.Client.Views"
    FlyoutBehavior="Flyout">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginView}"
        Route="LoginPage" 
        FlyoutItemIsVisible="False"/>   
    
    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate views:RegisterView}"
        Route="RegisterPage" 
        FlyoutItemIsVisible="False"/>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainView}"
        Route="MainPage" />

    <ShellContent
        Title="Orders"
        ContentTemplate="{DataTemplate views:OrderView}"
        Route="OrderPage" />

    <ShellContent
        Title="Cart"
        ContentTemplate="{DataTemplate views:CartView}"
        Route="CartPage" />
</Shell>