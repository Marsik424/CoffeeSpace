<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:CoffeeSpace._ViewModels"
             xmlns:data="clr-namespace:CoffeeSpace.Data.Models.CustomerInfo;assembly=CoffeeSpace.Data"
             x:DataType="viewModel:ProfileViewModel"
             x:Class="CoffeeSpace.Views.ProfileView">
    
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="#C33764" Offset="0.2" />

            <GradientStop Color="#1D2671" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Frame x:DataType="data:Customer">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
              ColumnDefinitions="Auto,Auto,Auto,Auto,Auto"
              ColumnSpacing="1">
            
            <Label Text="{Binding Name}"/>
            
        </Grid>
    </Frame>
</ContentPage>